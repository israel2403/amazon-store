# .env.example
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file!

# ============================================
# Vault Configuration
# ============================================
VAULT_ADDR=http://localhost:8200
VAULT_ROOT_TOKEN=myroot

# ============================================
# Secrets (will be loaded into Vault)
# ============================================

# GitHub credentials
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=your_github_token_here

# DockerHub credentials  
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token_here

# Jenkins admin credentials
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD='your_secure_password_here'  # Use quotes if password has special characters

# Kubernetes configuration
K8S_NAMESPACE=amazon-api

# PostgreSQL credentials (for orders service)
POSTGRES_DB=amazon_orders
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
