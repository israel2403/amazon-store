def loadDockerHubCredsFromVault() {
    withVault([
        configuration: [
            vaultUrl: 'http://vault.amazon-api.svc.cluster.local:8200',
            vaultCredentialId: 'vault-root-token',
            engineVersion: 2
        ],
        vaultSecrets: [[
            path: 'kv/amazon-api/dockerhub',
            secretValues: [
                [envVar: 'DOCKERHUB_USERNAME', vaultKey: 'username'],
                [envVar: 'DOCKERHUB_TOKEN', vaultKey: 'token']
            ]
        ]]
    ]) {
        env.DOCKERHUB_USERNAME = "${DOCKERHUB_USERNAME}"
        env.DOCKERHUB_TOKEN = "${DOCKERHUB_TOKEN}"
    }
}

pipeline {
    agent any

    environment {
        SERVICE_DIR   = 'amazonapi-orders'
        IMAGE_NAME    = 'amazonapi-orders'
        IMAGE_TAG     = "${env.BUILD_NUMBER}"
        K8S_NAMESPACE = "${env.K8S_NAMESPACE ?: 'amazon-api'}"
    }

    stages {
        stage('Load Credentials') {
            steps {
                script {
                    echo 'Loading credentials from Vault...'
                    loadDockerHubCredsFromVault()
                }
            }
        }

        stage('Build & Test') {
            steps {
                dir(env.SERVICE_DIR) {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Docker Build & Push') {
            when {
                expression {
                    return env.GIT_BRANCH ==~ /.*(master|main|develop|dev).*/
                }
            }
            steps {
                dir(env.SERVICE_DIR) {
                    sh """
                        echo ${DOCKERHUB_TOKEN} | docker login -u ${DOCKERHUB_USERNAME} --password-stdin
                        docker build -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG} -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest .
                        docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest
                        docker logout
                    """
                }
            }
        }

        stage('Deploy to Development') {
            steps {
                script {
                    echo 'Deploying to Development environment (amazon-api-dev)...'
                    sh '''
                        kubectl apply -k k8s/overlays/dev/
                        kubectl rollout restart -n amazon-api-dev deployment/amazonapi-orders-deployment
                        kubectl rollout status -n amazon-api-dev deployment/amazonapi-orders-deployment --timeout=5m
                    '''
                }
            }
        }

        stage('Deploy to Production') {
            when {
                branch 'master'
            }
            steps {
                script {
                    echo 'Deploying to Production environment (amazon-api-prod)...'
                    sh '''
                        kubectl apply -k k8s/overlays/prod/
                        kubectl set image deployment/amazonapi-orders-deployment amazonapi-orders=${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG} -n amazon-api-prod
                        kubectl rollout status -n amazon-api-prod deployment/amazonapi-orders-deployment --timeout=5m
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed'
        }
    }
}
