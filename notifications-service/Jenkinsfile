pipeline {
    agent any

    environment {
        SERVICE_DIR   = 'notifications-service'
        IMAGE_NAME    = 'notifications-service'
        IMAGE_TAG     = "${env.BUILD_NUMBER}"
        K8S_NAMESPACE = "${env.K8S_NAMESPACE ?: 'amazon-api'}"
    }

    stages {
        stage('Build & Test') {
            steps {
                dir(env.SERVICE_DIR) {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Development') {
            when {
                expression {
                    return env.GIT_BRANCH ==~ /.*(develop|dev).*/
                }
            }
            steps {
                script {
                    echo 'Deploying to Development environment...'
                    sh '''
                        kubectl apply -k k8s/overlays/dev/
                        kubectl rollout restart -n amazon-api deployment/notifications-service
                        kubectl rollout status -n amazon-api deployment/notifications-service --timeout=5m
                    '''
                }
            }
        }

        stage('Deploy to Production') {
            when {
                expression {
                    return env.GIT_BRANCH ==~ /.*(master|main).*/
                }
            }
            steps {
                script {
                    echo 'Deploying to Production environment...'
                    sh '''
                        kubectl apply -k k8s/overlays/prod/
                        kubectl rollout restart -n amazon-api deployment/notifications-service
                        kubectl rollout status -n amazon-api deployment/notifications-service --timeout=5m
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed'
        }
    }
}
